#print.modal.modal--dark
    span.modal__close-button.print--close X
    section.modal__body.modal__body--opaque
        h1.modal__header Select A Date
        form: .form-group.row
            input#record-date.text-center.bordered(type='date')
        .row
            .row__md-6: button.btn.btn--lg.btn--danger.btn--wide.print--close CANCEL
            .row__md-6: button.submit.btn.btn--lg.btn--primary.btn--wide#print-records(disabled) SUBMIT

