#delete.modal.modal--dark
    span.modal__close-button.delete--close X
    section.modal__body.modal__body--opaque
        h1.modal__header Are you sure you want to delete #[span.active-name] ?
        form: .form-group.row
            p.text-center Type '#[span.active-name]' here to confirm.
            input#confirm-delete.text-center.bordered
        .row
            .row__md-6: button.btn.btn--lg.btn--primary.btn--wide.delete--close NO
            .row__md-6: button(disabled).btn.btn--lg.btn--danger.btn--wide#delete-item DELETE

